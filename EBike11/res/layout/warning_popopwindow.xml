<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#50000000"
    tools:context="com.phonegap.natives.activity.MapActivity">


    <LinearLayout

        android:layout_centerInParent="true"
        android:layout_width="260dp"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/eroor_popopwindow_bg">

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:src="@drawable/sad"/>

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/warning_tv"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#4F668F"
            android:text="车辆所在位置:车辆网络信号不佳!"/>

        <View
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#4F668F"></View>
        <Button
            android:id="@+id/choose"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#00000000"
            android:textColor="#4F668F"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="12sp"
            android:text="确定"/>

    </LinearLayout>


</RelativeLayout>
